generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["relationJoins"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String  @id @default(uuid())
  name  String
  phone String  @unique @db.VarChar(19)
  email String  @unique @db.VarChar(100)
  hash  String
  salt  String
  adm   Boolean
  likes Post[]  @relation("postsLiked")
  posts Post[]  @relation("postsPosted")

  @@map("user")
}

model Post {
  id            String  @id @default(uuid())
  author        User    @relation("postsPosted", fields: [authorId], references: [id], onDelete: Cascade)
  authorId      String
  title         String
  soundtrackUrl String?
  likes         User[]  @relation("postsLiked")
  file          File?

  @@map("post")
}

model File {
  id           String @id @default(uuid())
  filename     String
  originalname String
  size         Int
  mimetype     String
  duration     Int

  post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId String @unique

  @@map("file")
}
